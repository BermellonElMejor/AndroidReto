<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaptadorCatalogo">

    <TextView
        android:id="@+id/idDescripcion"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idPrecio"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Precio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDescripcion" />

    <EditText
        android:id="@+id/editCantidad"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/idDescripcion"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="106dp"
        android:layout_height="68dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/editCantidad"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gaming_grandma_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>